@using Web.Models
@model List<OutgoingMessageViewModel>
@{
    ViewBag.Title = "Мои сообщения";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.ActionLink("входящие", "Index", "Messages") | исходящие</h2>
<table>
    <tr>
        <td>Кому</td>
        <td>Когда</td>
        <td>Текст</td>
    </tr>
    @foreach (OutgoingMessageViewModel message in Model)
    {
        <tr>
            <td>@message.UserTo.SecondName @message.UserTo.FirstName</td>
            <td>@message.Message.CreatedDate.ToShortDateString()</td>
            <td>@message.Message.Text</td>
        </tr>
    }
</table>
